{
  "$schema": "https://raw.githubusercontent.com/igorsaux/dmm-renderer/master/config.schema.json",
  "groups": {
    "Exodus": {
      "mainLevel": "2",
      "bounds": [
        [0, 0],
        [-255, 255]
      ],
      "layers": ["default", "areas", "landmarks", "random-loot"],
      "levels": {
        "Ghetto": {
          "path": "./maps/exodus/exodus-1.dmm"
        },
        "Main": {
          "path": "./maps/exodus/exodus-2.dmm",
          "underlays": ["1"]
        },
        "Satellite": {
          "path": "./maps/exodus/exodus-4.dmm"
        },
        "Asteroid": {
          "path": "./maps/exodus/exodus-6.dmm"
        }
      }
    },
    "Frontier": {
      "mainLevel": "1",
      "bounds": [
        [0, 0],
        [-300, 300]
      ],
      "layers": ["default", "areas", "landmarks", "random-loot"],
      "levels": {
        "Main": {
          "path": "./maps/exodus/frontier/frontier-1.dmm"
        }
      }
    }
  },
  "selectors": {
    "atom": {
      "rules": [
        {
          "type": "ByPath",
          "include": [".*"]
        },
        {
          "type": "UseSelector",
          "name": "area",
          "negate": true
        },
        {
          "type": "UseSelector",
          "name": "landmark",
          "negate": true
        },
        {
          "type": "UseSelector",
          "name": "random",
          "negate": true
        }
      ]
    },
    "area": {
      "rules": [
        {
          "type": "ByPath",
          "include": ["/area/.*"]
        }
      ]
    },
    "landmark": {
      "rules": [
        {
          "type": "ByPath",
          "include": [
            "/obj/effect/shuttle_landmark/.*",
            "/obj/effect/landmark/.*"
          ]
        }
      ]
    },
    "random": {
      "rules": [
        {
          "type": "ByPath",
          "include": ["/obj/random.*"]
        }
      ]
    }
  },
  "layers": {
    "default": {
      "display": "Main",
      "selectors": ["atom"]
    },
    "areas": {
      "display": "Areas",
      "selectors": ["area"]
    },
    "landmarks": {
      "display": "Landmarks",
      "selectors": ["landmark"]
    },
    "random-loot": {
      "display": "Random Loot",
      "selectors": ["random"]
    }
  },
  "dme": "baystation12.dme"
}
